{
  "manifest_version": 2,

  "name": "Pia",
  "description": "Assistant that adds some crucial browsing capabilities!",
  "version": "2.0",

  "background":{
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Personal Intelligent Assistant"
  },

  "permissions": [
    "activeTab",
    "http://*/"
  ]
}
