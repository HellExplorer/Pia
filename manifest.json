{
  "manifest_version": 2,

  "name": "Pia",
  "description": "Pia - Your smart, personal assistant",
  "version": "2.0",

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  }, 

  "background":{
    "scripts": ["background.html"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
        "19": "assets/icons/icon19.png",
        "38": "assets/icons/icon38.png"
      },
    "default_title": "Pia - Your smart, personal assistant"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://*/"
  ]
}
